<%= form_for [:backoffice, @post], multipart: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, as: :text %>
  </div>
  
  <div>
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :description, {} %>
  </div> 
  
  <div>
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </div>
  
  <div>
    <%= f.submit t(submit) %>
  </div>
<% end %>