<h1 class='page-header'>Administradores</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        Listando Administradores
        
        <% if policy(@current_admin).new? %>
          <%= link_to new_backoffice_admin_path,
                      class: 'btn btn-success btn-circle pull-right',
                      style:'margin-top: -5px' do %>
              <i class='fa fa-plus'></i>
          <% end %>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th><%= t('name') %></th>
                        <th><%= t('email') %></th>
                        <th><%= t('authorization') %></th>
                        <th style="width:9%"></th>
                    </tr>
                </thead>
                <tbody>
                  <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.admin_profile.name %></td>
                        <td><%= admin.email %></td>
                        <td><%= t(admin.role) %></td>
                        <td>
                          <%= link_to edit_backoffice_admin_path(admin),
                                      class: 'btn btn-warning btn-circle' do %>
                              <i class='fa fa-edit'></i>
                          <% end %>
                          
                          <%= destroy_admin_link_to '#',
                                backoffice_admin_path(admin),
                                options:{title: admin.admin_profile.name,
                                class: 'btn btn-danger btn-circle',
                                item: "<i class='fa fa-edit'></i>"} %>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
