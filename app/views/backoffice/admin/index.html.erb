
<div class="panel panel-default">
    <div class="panel-heading">
        Listando Administradores
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th><%= t('name') %></th>
                        <th><%= t('email') %></th>
                        <th><%= t('authorization') %></th>
                    </tr>
                </thead>
                <tbody>
                  <% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.admin_profile.name %></td>
                        <td><%= admin.email %></td>
                        <td><%= t(admin.role) %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
