<% @posts.each do |post| %>
  <h3> <%= post.title %> </h3>
  <%= link_to post.admin.admin_profile.name, '#'  %>
  <p> <%= truncate(post.body, length: 100) %> </p>
  <%= link_to "#{t 'created_at'}: #{post.created_at.strftime('%B %d, %Y')}", '#'  %>
  <% unless post.created_at == post.updated_at %>
    <%= link_to "#{t 'updated_at'}: #{post.updated_at.strftime('%B %d, %Y')}", '#'  %>
  <% end %>
  <%= image_tag post.images.first.url %>
  <%= link_to t('confirmations.edit.post'), edit_backoffice_post_path(post) %>
  <%= destroy_post_link_to t('confirmations.destroy.post'), backoffice_post_path(post),
      options: {title: post.title} %>
<% end %>

