<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
        <h4><%= t('last_updates') %></h4>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;" width="100%">
              <thead>
                <tr role="row">
                  <th class="sorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 100px;" aria-sort="descending">
                    <%= t('date/time') %>
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 100px;">
                    <%= t('administrator') %>
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 204px;" >
                     <%= t('update') %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% @audits.each do |audit| %>
                  <tr>
                    <td class=""><%= audit.created_at.strftime('%d/%B/%Y - %H:%M:%S') %></td>
                    <td class=""><%= audit.username %></td>
                    <td class="sorting_1"><%= raw t("messages.#{audit.auditable_type.downcase}_#{audit.action}", item_name: item_name(audit)) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
  </div>
    <!-- /.panel -->
</div>
                
<script>
  $(document).ready(function() {
    $('#dataTables-example').DataTable({
        responsive: true
    });
  });
</script>  
                  
                  
                  
                